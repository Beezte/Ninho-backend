<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container">
    <div class="card">
        <div class="card-header">
            Atualização de Produto
        </div>
        <div class="card-body">
            <form action="/produto/edit" method="post">
                <input type="hidden" name="id" value="<%= produto.id %>">
                <label>Titulo</label>
                <input type="text" name="titulo" id="tituloid" class="form-control" value="<%= produto.titulo %>">

                <label>Descrição</label>
                <textarea name="descricao" id="descProd"
                          class="form-control" cols="30" rows="10" ><%= produto.descricao %></textarea>
                <button class="btn btn-primary">Confirmar</button>
            </form>
        </div>

    </div>
</div>

<%- include('../partials/footer') %>